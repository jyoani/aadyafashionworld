@model List<Product>

<div class="container">
    <div class="row flex pt-4">
        <div class="col-6">

            <h1>List of product</h1>
        </div>
        <div class="col-6 text-center pb-4">
            <a asp-area="Admin" asp-controller="product" asp-action="Insert" class="btn btn-primary"><i class="bi bi-patch-plus-fill"></i>Create new product</a>

        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th> Title</th>
                <th>Image</th>
                <th>ItemNumber</th>
                <th>Price</th>
                <th>Brand</th>
                <th>Category</th>
                <th>Dress Color</th>
                <th>Count </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.Title</th>
                    <th><img src="@item.ProductImages" alt="Book Image" width="100" height="150"></th>
                    <th>@item.ISBN</th>
                    <th>@item.Price</th>
                    <th>@item.Author</th>
                    <th>@item.Category?.Name</th>
                    <th>@item.DressColor</th>
                    <th>@item.Count</th>

                    <th>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="product" asp-action="Insert" asp-route-id="@item.Id" class="btn btn-dark"><i class="bi bi-pencil"></i>Edit</a>
                        </div>

                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="product" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary"><i class="bi bi-file-x-fill"></i>Delete</a>
                        </div>
                    </th>
                </tr>
            }
        </tbody>

    </table>
</div>

@section Scripts {
    <script src="~/js/product.js"></script>
}
