    <div class="card mb-4">
        <header class="card-header">
            <div class="row align-items-center">
                <div class="col-md-3 col-12 me-auto mb-md-0 mb-3">
                    <h4 class="card-title">Latest Orders</h4>
                </div>
                <div class="col-md-2 col-6">
                    <a asp-area="Admin" asp-action="Index" asp-controller="Order" class="btn btn-primary btn-xs">Manage Order</a>
                </div>
            </div>
        </header>
        <div class="card-body">
            <div class="table-responsive">
                <div class="table-responsive">
                    <table class="table align-middle table-nowrap mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="align-middle" scope="col">Order ID</th>
                                <th class="align-middle" scope="col">Customer Name</th>
                                <th class="align-middle" scope="col">Date</th>
                                <th class="align-middle" scope="col">Total</th>
                                <th class="align-middle" scope="col">Payment Status</th>
                                <th class="align-middle" scope="col">Phone Number</th>
                                <th class="align-middle" scope="col">View Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.OrderHeaders)
                            {
                                <tr>

                                    <td><a href="#" class="fw-bold"></a>@order.Id</td>
                                    <td>@order.Name</td>
                                    <td>
                                        @order.PaymentDate.ToShortDateString()
                                    </td>
                                    <td>
                                        @order.orderTotal.ToString("c")
                                    </td>
                                    @if (order.PaymentStatus == SD.PaymentStatusApproved)
                                    {
                                        <td>
                                            <span class="badge badge-pill badge-soft-success">@order.PaymentStatus</span>
                                        </td>
                                    }
                                    else if (order.PaymentStatus == SD.StatusCancelled)
                                    {
                                        <td>
                                            <span class="badge badge-pill badge-soft-danger">@order.PaymentStatus</span>
                                        </td>
                                    }
                                    else if (order.PaymentStatus == SD.StatusPending)
                                    {
                                        <td>
                                            <span class="badge badge-pill badge-soft-warning">@order.PaymentStatus</span>
                                        </td>
                                    }
                                    else if (order.PaymentStatus == SD.StatusRefunded)
                                    {
                                        <td>
                                            <span class="badge badge-pill badge-soft-info">@order.PaymentStatus</span>
                                        </td>
                                    }
                                    <td>
                                        @order.PhoneNumber
                                    </td>

                                    <td>
                                        <a class="btn btn-primary btn-sm">View details</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="pagination-area mt-30 mb-50">
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-start">
                @if (Model.CurrentPage > 1)
                {

                    <li class="page-item"><a href="?page=@(Model.CurrentPage - 1)&itemsPerPage=@Model.ItemsPerPage">Prev</a></li>
                }
                @for (int i = Math.Max(1, Model.CurrentPage - 4); i <= Math.Min(Model.CurrentPage + 4, Math.Ceiling((double)Model.NumberOfOrdersLastWeek / Model.ItemsPerPage)); i++)
                {

                    if (Model.CurrentPage == i)
                    {
                        <span>@i</span>
                    }

                }
                @if (Model.CurrentPage < Math.Ceiling((double)Model.NumberOfOrdersLastWeek / Model.ItemsPerPage))
                {
                    <li class="page-item"><a href="?page=@(Model.CurrentPage + 1)&itemsPerPage=@Model.ItemsPerPage">Next</a></li>


                }
            </ul>
        </nav>
    </div>

