@model Category


<form method="post" asp-controller="Category" asp-action="Edit">
    <div class="row pb-2">
        <h2 class="text-primary">Update Category</h2>
        <hr/>
    </div>
    <div class="mb-3">
        <label>Name of Category</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label>Category display number</label>
        <input type="number" asp-for="DisplayOrder" class="form-control" />
        <span asp-validation-for="DisplayOrder"></span>
    </div>
    <div class="row">
        <div class="col-6">
            <button type="submit" class="btn btn-primary" class="form-control" >Update</button>
        </div>
        <div class="col-6">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary" class="form-control" >Back to List</a>
        </div>

        
    </div>
    
    </form>