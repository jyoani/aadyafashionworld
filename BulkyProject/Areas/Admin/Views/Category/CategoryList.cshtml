@model List<Category>

<div class="container">
    <div class="row flex pt-4">
        <div class="col-6">

            <h1>List of category</h1>
        </div>
        <div class="col-6 text-center pb-4">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-patch-plus-fill"></i>Create new Category</a>

        </div>
    </div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
        <th>Category Name</th>
        <th>Display Order</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
           <tr>
               <th>@item.Name</th>
               <th>@item.DisplayOrder</th>
               <th>
                   <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark"><i class="bi bi-pencil"></i>Edit</a>
                   </div>

                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary"><i class="bi bi-file-x-fill"></i>Delete</a>
                        </div>
               </th>
           </tr>
        }
    </tbody>

</table>

</div>