@model List<Cop>

<div class="bg-secondary bg-opacity-10 py-2 p-4">
    <div class="container">
        <h1>Show All Coupons</h1>
    </div>
</div>
<div class="container p-4 py-3">

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-borderless">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Percentage</th>

                    <th>Generated Date</th>
                    <th>Expiry Date</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.CouponName</td>
                        <td>@item.Percentage.%</td>

                        <td>@item.CouponGeneratedDate.ToString("yyyy-MM-dd")</td>
                        <td>@item.ExpiryDate.ToString("yyyy-MM-dd")</td>
                        <td>
                            @if (item.IsExpired)
                            {
                                <span class="badge bg-danger">Expired</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Active</span>
                            }
                        </td>
                        <td>
                            <a asp-area="Admin" asp-controller="Coupons" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No coupons found!!!!!</p>
    }

</div>
