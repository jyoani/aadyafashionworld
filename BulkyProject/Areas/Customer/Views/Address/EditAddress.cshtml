@model AddressCustomer
<div class="container mx-auto">
    <div class="row justify-content-center">

        <div class="col-12 col-lg-6">
            <h1 class="mt-3 mb-3 h3">Edit Address</h1>
            <form method="post" asp-action="EditAddress">
                <div class="mb-3 ">
                    <label class="form-label">UserName</label>
                    <input type="text" id="username" class="form-control" asp-for="FullName" />
                </div>
                <div class="mb-3 ">
                    <label class="form-label">PhoneNumber</label>
                    <input type="text" id="username" class="form-control" asp-for="Phonenumber" />
                </div>
                <div class="mb-3 ">
                    <label class="form-label">street address</label>
                    <input type="text" id="username" class="form-control" asp-for="Area" />
                </div>
                <div class="mb-3 ">
                    <label class="form-label">City </label>
                    <input type="text" id="username" class="form-control" asp-for="BuildingName" />
                </div>
                <div class="mb-3 ">
                    <label class="form-label">State </label>
                    <input type="text" id="username" class="form-control" asp-for="State" />
                </div>
                <div class="mb-3 ">
                    <label class="form-label"> Postal code</label>
                    <input type="text" id="username" class="form-control" asp-for="Postalcode" />
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-dark">Update</button>
                </div>
            </form>
        </div>
